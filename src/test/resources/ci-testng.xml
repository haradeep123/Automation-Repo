<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="SpiceJet E2E CI Suite" parallel="false" verbose="2">
    
    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="true"/>
    <parameter name="timeout" value="30"/>
    
    <listeners>
        <listener class-name="com.automation.utils.ExtentManager"/>
    </listeners>
    
    <test name="SpiceJet E2E Tests">
        <groups>
            <run>
                <include name="e2e"/>
            </run>
        </groups>
        
        <classes>
            <class name="com.automation.tests.SpiceJetHybridE2ETest">
                <methods>
                    <include name="testCompleteFlightBookingJourneyHybrid"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>
